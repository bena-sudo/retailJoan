{% extends 'base.html.twig' %}
{% block title %}Inici{% endblock %}
{% block body %}

<section id="hero" class="hero section dark-background">

      <div class="container">
        <div class="row gy-4">
          <div class="col-lg-4 order-lg-last hero-img aos-init aos-animate" data-aos="zoom-out">
            <img src="assets/img/phone_1.png" alt="Phone 1" class="phone-1">
            <img src="assets/img/phone_2.png" alt="Phone 2" class="phone-2">
          </div>
          <div class="col-lg-8 d-flex flex-column justify-content-center align-items text-center text-md-start aos-init aos-animate" data-aos="fade-up">
            <h2>PInici Programa Gestio Retail Joan Benavent</h2>
            <p>Este es un programa de retail creado para la clase de desplegament de 2ºDAW. </p>
            <div class="d-flex mt-4 justify-content-center justify-content-md-start">
              <a href="{{ path('dades_seccio', { 'codi': 1 }) }}" class="download-btn"><i class="bi bi-google-play"></i> <span>Google Play</span></a>
              <a href="{{ path('seccions_dades') }}" class="download-btn"><i class="bi bi-apple"></i> <span>App Store</span></a>
            </div>
          </div>
        </div>
      </div>

</section>

{% if seccions %}

    <section id="featured" class="featured section">

      <!-- Section Title -->
      <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <h2>Seccions</h2>
        <p>Llista de seccions que oferim</p>
      </div><!-- End Section Title -->

      <div class="container">
        <div class="row gy-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">

          {% for s in seccions %}
            <div class="col-md-4">
              <div class="card">
                <div class="img">
                  <a href="{{ path('dades_seccio', { 'codi': s.codi }) }}" >
                    <img src="{{ asset('assets/img/cards-4.png') }}" alt="" class="img-fluid">
                    <div class="icon"><i class="bi bi-hdd-stack"></i></div>
                  </a>
                </div>
                <h2 class="title">{{ s.nom }}</h2>
                <p>
                  {{ s.descripcio }}
                </p>
              </div>
            </div><!-- End Card Item -->
          {% endfor %}
          
        </div>
      </div>
    </section>

{% else %}
          
    <section id="featured" class="featured section">
      <!-- Section Title -->
      <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <h2>No s'ha trobat cap secció</h2>
        <a href="{{ path('inici') }} ><p>Torna a l'inici.</p></a>
      </div><!-- End Section Title -->
    </section>

{% endif %}

{% endblock %}